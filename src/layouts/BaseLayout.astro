<!-- New file: Base layout component -->
---
import '../styles/global.css';

interface Props { title?: string }
const { title = 'Mindfulina' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <!-- Header -->
    <header class="text-center py-8">
      <div class="flex justify-center items-center flex-col">
        <img src="/images/logo.png" alt="Mindfulina Logo" class="h-24 w-auto mb-2" />
        <p class="text-ocean mt-2">Island‑inspired Sound Journeys</p>
      </div>
    </header>

    <!-- Hero image - only shown on homepage -->
    {Astro.url.pathname === '/' && (
      <div class="relative h-64 md:h-96 overflow-hidden mb-8">
        <img 
          src="/images/tall-shot.jpeg" 
          alt="Mindfulina sound bath session" 
          class="absolute inset-0 w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-white/80"></div>
      </div>
    )}

    <!-- Decorative wave -->
    <svg class="w-full h-8 text-ocean/30" viewBox="0 0 1440 60" fill="currentColor">
      <path d="M0,30 C150,60 300,0 450,30 C600,60 750,0 900,30 C1050,60 1200,0 1350,30 C1420,45 1440,40 1440,40 L1440,0 L0,0 Z"/>
    </svg>

    <!-- Main slot -->
    <main class="max-w-3xl mx-auto p-6">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="text-center text-sm py-10 text-gray-500">
      © {new Date().getFullYear()} Mindfulina
    </footer>
  </body>
</html> 